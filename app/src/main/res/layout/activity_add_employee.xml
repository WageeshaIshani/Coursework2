<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.cwk2.AddEmployeeActivity"
    android:weightSum="1"
    android:orientation="vertical">



    <TextView
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:text="New Employee"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:text="First Name"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/textView4"
        android:layout_weight="0.00"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/fNameText"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
          />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Middle Name"
        android:id="@+id/textView5"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/mNameText"
        android:layout_weight="0.00"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/textView6"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/lNameText"
        android:layout_weight="0.00"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:id="@+id/textView7"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dobText"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textView8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/genderButton"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Male"
                android:id="@+id/radioMale"
                android:checked="false"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:textAlignment="center" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Female"
                android:id="@+id/radioFemale"
                android:checked="false"
                android:textSize="14dp"
                android:layout_gravity="right"
                android:textAlignment="center" />

    </RadioGroup>

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView10"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/adrsText"
        android:layout_weight="0.00"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Tel"
        android:id="@+id/textView11"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telNoText"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView12"
        android:layout_weight="0.00"
        android:layout_marginLeft="10dp"
        android:textSize="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText"
        android:layout_weight="0.00"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="58dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="back"
            android:id="@+id/backButton"
            android:layout_gravity="right"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="save"
            android:id="@+id/savebt"
            android:layout_marginRight="5dp"
            android:layout_gravity="right" />

    </LinearLayout>

</LinearLayout>
